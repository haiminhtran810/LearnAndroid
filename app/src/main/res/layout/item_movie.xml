<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="data"
                  type="home.learn.hmt.learnandroid.model.MovieItem"/>
        <import type="android.text.TextUtils"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_1"
            android:paddingTop="@dimen/dp_10">

        <TextView
                android:id="@+id/txt_stt"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_80"
                android:gravity="center"
                android:textColor="@color/greyishBrown"
                bind:layout_constraintLeft_toLeftOf="parent"
                bind:layout_constraintTop_toTopOf="parent"
                tools:text="1"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/img_movie"
                android:layout_width="@dimen/dp_80"
                android:layout_height="@dimen/dp_80"
                android:paddingLeft="@dimen/dp_5"
                android:paddingRight="@dimen/dp_5"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_foreground"
                bind:layout_constraintLeft_toRightOf="@+id/txt_stt"
                bind:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/ic_launcher_foreground"/>

        <TextView
                android:id="@+id/txt_title_movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="@{data.title}"
                android:textColor="@android:color/black"
                bind:layout_constraintLeft_toRightOf="@+id/img_movie"
                bind:layout_constraintTop_toTopOf="parent"
                tools:text="Avenger, The War"/>

        <TextView
                android:id="@+id/txt_sound_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:ellipsize="end"
                android:lines="1"
                android:maxEms="10"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/greyishBrown"
                android:text="@{data.overview}"
                bind:layout_constraintLeft_toRightOf="@+id/img_movie"
                bind:layout_constraintTop_toBottomOf="@+id/txt_title_movie"
                tools:text="Sound by English"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintLeft_toRightOf="@+id/img_movie">

            <TextView

                    android:id="@+id/txt_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greyishBrown"
                    tools:text="4.5"/>

            <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_4"
                    android:src="@android:drawable/star_big_off"/>
        </LinearLayout>

        <TextView
                android:id="@+id/txt_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="@color/colorAccent"
                android:visibility="gone"
                bind:layout_constraintBottom_toBottomOf="parent"
                bind:layout_constraintRight_toRightOf="parent"
                tools:text="80.000 Ä‘"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:visibility="gone"
                android:id="@+id/img_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/btn_default_small"
                bind:layout_constraintRight_toRightOf="parent"
                bind:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
